        .wrapper
            include ../includes/_nav-panel.pug    
            section.about-title
                .social-title
                    ul.social
                        li.social__link
                            a.social__link-vk(href="https://vk.com/minorvankertis" target="_blank")
                                svg.social__icon.social__icon-vk

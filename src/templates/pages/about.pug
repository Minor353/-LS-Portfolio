                            ul.about-main__frontend-wrap
                                li.about-main__item
                                    span.about-main__item-title Git
                                    svg(viewBox='0 0 110 110').circles
                                        circle(r="45" cx="50%" cy="50%" fill="none").circle__first
                                        circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-75 
                                li.about-main__item
                                    span.about-main__item-title Gulp

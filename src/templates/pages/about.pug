                                        circle(r="45" cx="50%" cy="50%" fill="none").circle__first
                                        circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15
                                li.about-main__item
                                    span.about-main__item-title Mongo.db
                                    svg(viewBox='0 0 110 110').circles
                                        circle(r="45" cx="50%" cy="50%" fill="none").circle__first
                                        circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15
                        .about-main__workflow
                            h5 WorkFlow
                            ul.about-main__frontend-wrap
                                li.about-main__item
                                    span.about-main__item-title Git
                                    svg(viewBox='0 0 110 110').circles
                                        circle(r="45" cx="50%" cy="50%" fill="none").circle__first
                                        circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15 
                                li.about-main__item
                                    span.about-main__item-title Gulp
                                    svg(viewBox='0 0 110 110').circles
                                        circle(r="45" cx="50%" cy="50%" fill="none").circle__first
                                        circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15 
                                li.about-main__item
                                    span.about-main__item-title Bower
                                    svg(viewBox='0 0 110 110').circles
                                        circle(r="45" cx="50%" cy="50%" fill="none").circle__first
                                        circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15
            section.about-contact
                .contact__map#map
                .contact__content

            include ../includes/_footer.pug
        script.
            function initMap() {
                var myMap = {lat: 48.415578, lng: 35.05997};
                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 10,
                    center: myMap
                });
                var marker = new google.maps.Marker({
                    position: myMap,
                    map: map
                });
            }
        script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCuLjb-iV3X_4aUsa2TbUyXn4NxU_RdUv4&callback=initMap")

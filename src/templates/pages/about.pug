                                    use(xlink:href="assets/images/sprite.svg#envelope_n")
                                .contact__link-text vankert353@gmail.com
                        li.contact__content-item
                            a.contact__content-link(href="#")
                                svg.contact__link-img
                                    use(xlink:href="assets/images/sprite.svg#map_n")
